# OpenAI 兼容接口（zhipu GLM-4.7-Flash 或 vLLM）
# 默认使用 zhipu GLM-4.7-Flash API
VLLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
VLLM_MODEL=glm-4.7-flash
VLLM_API_KEY=your-zhipu-api-key-here

# 如果使用本地 vLLM，修改为类似以下地址：
# VLLM_BASE_URL=http://localhost:8000
# VLLM_MODEL=qwen2.5-7b-instruct
# VLLM_API_KEY=EMPTY

# 生成参数
TEMPERATURE=0.7
TOP_P=0.9
MAX_TOKENS=4096

# 网络与重试
REQUEST_TIMEOUT_SECONDS=60
MAX_RETRIES=12
RETRY_BASE_SECONDS=2
RETRY_MAX_SECONDS=90
RETRY_BACKOFF_MULTIPLIER=2
RETRY_JITTER_SECONDS=1.5

# 代理循环
LOOP_SLEEP_SECONDS=10
CONTEXT_MAX_CHARS=6000

# 创作导向控制
CREATIVE_ONLY=true
CREATIVE_BRIEF_PATH=creative_brief.md
# 逗号分隔关键词（命中则视为运维/工具类目标）
GOAL_AVOID_KEYWORDS=日志,log,监控,monitor,备份,backup,运维,ops,系统,system,诊断,debug,排查,巡检,ssh,rsync,docker,容器,cpu,内存,磁盘,network,syslog
# 近期目标去重窗口（条数）
GOAL_RECENT_LIMIT=6

# 命令执行
ALLOW_COMMAND_EXECUTION=true
ALLOW_UNSAFE_COMMANDS=true
COMMAND_ALLOWLIST=
# 0 表示不限制每轮命令数量
MAX_COMMANDS_PER_CYCLE=0
COMMAND_TIMEOUT_SECONDS=300
PYTHON_BIN=python3

# 路径
JOURNAL_DIR=journal
STATE_DIR=state

# 日志
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=logs/wanderer.log
LOG_MAX_BYTES=5242880
LOG_MAX_FILES=5
