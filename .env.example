# OpenAI 兼容接口（zhipu GLM-4.7-Flash 或 vLLM）
# 默认使用 zhipu GLM-4.7-Flash API
# VLLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
# VLLM_MODEL=glm-4.7-flash
# VLLM_MODEL_A=glm-4.7-flash
# VLLM_MODEL_B=minimaxai/minimax-m2.1
# VLLM_API_KEY=your-zhipu-api-key-here

# NVIDIA OpenAI 兼容接口（示例）
# VLLM_BASE_URL=https://integrate.api.nvidia.com/v1
# VLLM_MODEL=z-ai/glm4.7
# VLLM_MODEL_A=z-ai/glm4.7
# VLLM_MODEL_B=minimaxai/minimax-m2.1
# NVIDIA_API_KEY=your-nvidia-api-key-here
# NVIDIA_ENABLE_THINKING=true
# NVIDIA_CLEAR_THINKING=false
# 或者直接传 OpenAI extra_body JSON：
# OPENAI_EXTRA_BODY={"chat_template_kwargs":{"enable_thinking":true,"clear_thinking":false}}

# 如果使用本地 vLLM，修改为类似以下地址：
VLLM_BASE_URL=http://localhost:9997
VLLM_MODEL=qwen3-8b
VLLM_API_KEY=EMPTY

# 生成参数
TEMPERATURE=0.7
TOP_P=0.9
MAX_TOKENS=4096

# 网络与重试
REQUEST_TIMEOUT_SECONDS=60
MAX_RETRIES=12
RETRY_BASE_SECONDS=2
RETRY_MAX_SECONDS=90
RETRY_BACKOFF_MULTIPLIER=2
RETRY_JITTER_SECONDS=1.5

# 辩论循环
LOOP_SLEEP_SECONDS=8
CONTEXT_MAX_CHARS=6000
IDENTITY_UPDATE_INTERVAL=3

# 强化学习（策略梯度）
RL_ENABLED=true
RL_DIR=state/rl
RL_POLICY_FILE=rl_policy.json
RL_METRICS_FILE=rl_metrics.json
RL_HISTORY_FILE=rl_history.jsonl
RL_LEARNING_RATE=0.12
RL_FOCUS_LEARNING_RATE=0.08
RL_BASELINE_ALPHA=0.1
RL_MIN_PROB=0.03
RL_ACTION_COUNT=2
RL_EXPLORATION=0.1

# 对抗状态机 + Curriculum
SKILLS_PATH=state/skills.json
STATE_REWARD_WEIGHT=0.8
ACTION_MISMATCH_PENALTY=0.6
CURRICULUM_PHASE=1

# 身份档案
IDENTITY_DIR=state
IDENTITY_A_FILE=identity_a.md
IDENTITY_B_FILE=identity_b.md

# 路径
JOURNAL_DIR=journal
STATE_DIR=state

# Web 控制台
WEB_PORT=3000
WEB_HOST=0.0.0.0

# 日志
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=logs/wanderer.log
LOG_MAX_BYTES=5242880
LOG_MAX_FILES=5
